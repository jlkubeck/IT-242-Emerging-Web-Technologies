<html>
<head>
<title>The Library</title>

</head>
<script type="text/javascript">
class LibraryItem{
    //add two properties
    //title and type
    constructor(){
        this.itemType = [];
        this.title = [];
    }
    
}

class Library{

    constructor(){
        this.items = [];
}
    add(){
        var frmItem = document.querySelector('#libraryForm');
        var item = this.buildItem(frmItem);
        this.items.push(item);
        console.log(this.items);
        console.table(this.items);
        return false;
        }
        buildItem(frm){
            var itemTypes = frm.querySelector('#selItemType').selectedOptions;
            return{
                'itemType':itemTypes[0].value, 
                'title':frm.title.value};
        }
        render(elementId){
            //loop over items and display on webpage
            var showMedia = frm.document.querySelector('#libraryItems').innerHTML = this.itemType + ' ' + this.title;
            var i = 1;
            var ul = document.querySelector('#libraryItems ul');

            this.items.forEach(function(sa){
            var ul = document.createElement('li');
                    if(i % 2 === 0){
                        ul.items.add('evenRow');
                    }
                    var s = document.createElement('li');
                    var a = document.createElement('li');
                    s.innerText = `${sa.itemType}`;
                    li.appendChild(s);
                    a.innerText = `${sa.title}`;                    
                    li.appendChild(a);
                    ul.appendChild(li);
                    i++;
                });
 
 
 
        }
        renderItem(item){
        }
}
var billsLibrary = new Library();

</script>
<body>
<h1>Our Library</h1>
<form id="libraryForm">
    <label for="selItemType">Item Type</label>
    <select name="itemType" id="selItemType">
        <option value="book">Book</option>
        <option value="movie">Movie</option>
        <option value="game">Game</option>

    </select>
    <label for="txtTitle">Title</label>
    <input type="text" name="title" id="txtTitle">

    <input type="submit" name="btnAdd" value="Add"
    onClick="return billsLibrary.add()">
</form>
    <ul id="libraryItems">

    </ul>
    
</body>
